<h1><%= @user.username %></h1>
<h3>About Me!</h3>
<p>Location: <%= @user.location %></p>
<p><%= @user.bio %></p>

<div class="container-fluid">
    <div class="row">
        <% @user.tweets.each_with_index do |tweet, i| %>
            <div class="col-sm-3 well">
                <h3><%= link_to tweet.user.username, tweet.user %></h3>
                <p><%= tweet.message %></p>
                <p><%= link_to 'Show Tweet', tweet %></p>
            </div>
            <% if (i%4) == 0 && i != 0 %>
                </div>
                <div class="row">
            <% end %>
        <% end %>
    </div>
</div>

<h3>Following:</h3>
<div class="container-fluid">
    <div class="row">
        <% @user.friends.each_with_index do |friend, i| %>
            <div class="col-sm-3 well">
                <h3><%= link_to friend.username, friend %></h3>
            </div>
            <% if (i%4) == 0 && i != 0 %>
                </div>
                <div class="row">
            <% end %>
        <% end %>
    </div>
</div>