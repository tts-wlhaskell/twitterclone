<%= form_for(@tweet) do |f| %>
    <div class="form-group">
        <%= f.label :message %>
        <%= f.text_area :message, class: "form-control" %>
        
        <%= f.hidden_field :user_id, value: current_user.id %>
        
        <%= f.submit class: "btn btn-success" %>
    </div>
<% end %>