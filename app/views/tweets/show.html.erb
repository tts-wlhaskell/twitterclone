<%= notice %>

<div class="well">
<h3><%= @tweet.name %> said:</h3>
<p><%= @tweet.message %></p>
<% if user_signed_in? && current_user.id == @tweet.user_id %>
    <%= link_to 'Edit', edit_tweet_path(@tweet) %>
    <%= link_to 'Delete', tweet_path(@tweet), method: :delete, data: {confirm: 'are you sure?'} %>
<% end %>
</div>

<%= link_to 'Back', root_path %>